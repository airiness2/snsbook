<h1>ブログ一覧</h1>

<%= notice %>

<table>
    <tr>
        <th>内容</th>
    </tr>
    
    <% @posts.each do |post| %>
    <tr>
        <td><%= post.content %></td>
        <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
        <td><%= link_to "投稿を編集する", edit_post_path(post.id) %></td>
        <td><%= link_to "投稿を削除する", post_path(post.id), method: :delete, data: { confirm: "本当に削除していいですか？"} %></td>
    </tr>
    <% end %>
</table>

<%= link_to '投稿一覧画面に戻る', '/posts' %>
<br>
<%= link_to '投稿新規作成へ', new_post_path %>